pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        SONAR_TOKEN = credentials('sonar-token')
    }

    stages {
        stage('Build') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn -B clean install'
                }
            }
        }

        stage('OWASP Dependency Scan') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn org.owasp:dependency-check-maven:check -DfailOnCVSS=7'
                }
            }
        }

        stage('Secrets Scan') {
    steps {
        sh 'gitleaks detect --source . --exit-code 1'
    }
}

        stage('Docker Image Scan') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t my-app:latest simple-java-maven-app/'

                    // Scan image with Trivy
                    sh '''
                      docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \
                      aquasec/trivy image --exit-code 1 --severity CRITICAL,HIGH my-app:latest
                    '''
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('simple-java-maven-app') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''mvn -B clean verify sonar:sonar \
                          -Dsonar.projectKey=my-app \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.token=$SONAR_TOKEN \
                          -Dsonar.qualitygate.wait=true'''
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline DevSecOps completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed — check the console output for details.'
        }
    }
}
