pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        SONAR_TOKEN = credentials('sonar-token')
    }

    stages {
        stage('Build') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn -B clean install'
                }
            }
        }

        stage('SAST SonarQube Analysis') {
            steps {
                dir('simple-java-maven-app') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''mvn -B clean verify sonar:sonar \
                          -Dsonar.projectKey=my-app \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.token=$SONAR_TOKEN \
                          -Dsonar.qualitygate.wait=true'''
                    }
                }
            }
        }
        
        stage('OWASP Dependency Scan') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn org.owasp:dependency-check-maven:check -DfailOnCVSS=7'
                }
            }
        }

        stage('Secrets Scan') {
    steps {
        sh 'gitleaks detect --source . --exit-code 1'
    }
}

        stage('DAST Scan') {
    steps {
        echo "üîç Running DAST scan with Nikto..."
        sh '''
            nikto -h http://staging.monsite.com:8080 -output nikto-report.html
        '''
        archiveArtifacts artifacts: 'nikto-report.html', allowEmptyArchive: true
    }
}




        stage('Docker Image Scan') {
    steps {
        script {
            echo 'üîç Running Trivy Docker image scan...'
            
            // Full JSON report
            sh '''
                trivy image \
                    --timeout 10m \
                    --exit-code 0 \
                    --no-progress \
                    --format json \
                    -o trivy-report.json \
                    eclipse-temurin:17

                # Optional: print a short summary to console
                trivy image \
                    --timeout 10m \
                    --exit-code 0 \
                    --no-progress \
                    --format table \
                    eclipse-temurin:17 | head -n 20
            '''
            
            echo '‚úÖ Trivy scan complete. Report saved as trivy-report.json'
            
            // Archive report in Jenkins
            archiveArtifacts artifacts: 'trivy-report.json', allowEmptyArchive: true
        }
    }
}


        
    }

    post {
        success {
            echo '‚úÖ Pipeline DevSecOps completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check the console output for details.'
        }
    }
}
